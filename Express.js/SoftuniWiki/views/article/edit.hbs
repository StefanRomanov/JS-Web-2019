<section>
    <h2>
        Edit article
        {{#if isAdmin}}
        <div class="controls">
            {{#if isLocked}}
            <a href="/article/unlock/{{_id}}">Unlock article</a>
            {{else}}
            <a href="/article/lock/{{_id}}">Lock article</a>
            {{/if}}
        </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form method="post">
            <label>Article title</label>
            <h3>{{title}}</h3>
            <label>Content</label>
            <textarea name="content" {{#if isLocked}}disabled {{/if}}>{{content}}</textarea>
            <input type="submit" value="Submit"{{#if isLocked}}disabled {{/if}}>
        </form>
    </div>
</section>